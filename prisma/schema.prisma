datasource db {
  provider = "mongodb"
  url      =  env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  externalId String   @unique
  attributes Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  role UserRole @default(USER)
}

enum UserRole {
  ADMIN
  USER
}
